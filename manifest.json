{
  "manifest_version": 3,
  "name": "Browser AI Memory",
  "version": "1.0.0",
  "description": "AI-powered browser memory to remember and recall your browsing context",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "history",
    "bookmarks",
    "notifications",
    "contextMenus",
    "alarms"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Browser AI Memory"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/extension_icon_transparent.png",
    "48": "icons/extension_icon_transparent.png",
    "128": "icons/extension_icon_transparent.png"
  }
}
